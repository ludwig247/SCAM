module Lcd
{
  in<int> value_input;

  out<int> lcd_out;


FSM behavior
{
  STATES = {run,print};
  var<int> lcd_value;
  var<int> lcd_out_value;
  var<int> value_input_value;
  @init:
    nextstate = run;
    lcd_value = 0;
  @run:
    read( value_input );
    lcd_value = value_input;
    if (lcd_value > 255) {
      lcd_out = 255;
      write( lcd_out );
    }
    if (lcd_value < 0) {
      lcd_out = 0;
      write( lcd_out );
    }
}
};
